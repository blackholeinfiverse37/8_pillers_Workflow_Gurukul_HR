# ===================================================================
# Sovereign Application Runtime (SAR) - Environment Configuration
# ===================================================================
#
# This is the example environment file for the Sovereign Application Runtime.
# Copy this file to `.env` and customize the values for your environment.
#
# To generate secure secrets, use:
# python -c "import secrets; print(secrets.token_urlsafe(32))"

# ===================================================================
# MONGODB CONFIGURATION
# ===================================================================
# MongoDB connection string
# For local development: mongodb://localhost:27017
# For MongoDB Atlas: mongodb+srv://<username>:<password>@<cluster>.mongodb.net
MONGODB_URI=mongodb://localhost:27017

# MongoDB database name
MONGODB_DB_NAME=bhiv_hr

# ===================================================================
# AUTHENTICATION SECRETS
# ===================================================================
# JWT secret key for user authentication tokens
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production

# System-level API key for service-to-service communication
API_KEY_SECRET=your-api-key-secret

# JWT secret key specifically for candidate tokens
CANDIDATE_JWT_SECRET_KEY=your-candidate-jwt-key-change-in-production

# ===================================================================
# SERVICE CONFIGURATION
# ===================================================================
# Audit logging configuration
AUDIT_LOGGING_ENABLED=true
AUDIT_STORAGE_BACKEND=mongodb
AUDIT_ASYNC_WRITES=true

# Tenant isolation configuration
TENANT_ISOLATION_ENABLED=true

# Workflow engine configuration
WORKFLOW_STORAGE_BACKEND=mongodb

# Security settings
MAX_LOGIN_ATTEMPTS=5
JWT_EXPIRATION_HOURS=24
REQUIRE_PASSWORD_COMPLEXITY=true

# ===================================================================
# EXTERNAL SERVICE INTEGRATIONS
# ===================================================================
# Artha Adapter (Payroll/Finance)
ARTHRA_API_URL=https://artha-api.example.com
ARTHRA_API_KEY=your-artha-key

# Karya Adapter (Task/Workflow)
KARYA_API_URL=https://karya-api.example.com
KARYA_API_KEY=your-karya-key

# InsightFlow Adapter (Analytics)
INSIGHTFLOW_API_URL=https://insightflow-api.example.com
INSIGHTFLOW_API_KEY=your-insightflow-key

# Bucket Adapter (Storage)
BUCKET_API_URL=https://bucket-api.example.com
BUCKET_CREDENTIALS=your-bucket-credentials

# ===================================================================
# DEVELOPMENT SETTINGS
# ===================================================================
# Environment (development, staging, production)
ENVIRONMENT=development

# Logging level
LOG_LEVEL=INFO

# Debug mode (set to false in production)
DEBUG=false

# Port configuration
PORT=8000

# CORS settings (comma-separated list of allowed origins)
ALLOWED_ORIGINS=*

# ===================================================================
# ADDITIONAL CONFIGURATION
# ===================================================================
# Rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# Session timeout in hours
SESSION_TIMEOUT_HOURS=8

# File upload size limit (in MB)
MAX_UPLOAD_SIZE_MB=10

# Email configuration (if using email services)
SMTP_SERVER=localhost
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# End of configuration
# ===================================================================