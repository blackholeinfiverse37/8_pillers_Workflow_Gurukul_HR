# Gurukul Backend Environment Configuration Template
# Copy this file to .env and fill in your values

# Server Configuration
HOST=0.0.0.0
PORT=3000
ENV=development

# Database
DATABASE_URL=sqlite:///./gurukul.db

# JWT Authentication
JWT_SECRET_KEY=change-this-to-a-secure-random-string
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Integration URLs (9-Pillar System)
CORE_URL=http://localhost:8002
BUCKET_URL=http://localhost:8001
KARMA_URL=http://localhost:8000
INSIGHT_CORE_URL=http://localhost:8005
INSIGHT_FLOW_URL=http://localhost:8006

# Feature Flags
ENABLE_CORE_INTEGRATION=true
ENABLE_BUCKET_INTEGRATION=true
ENABLE_KARMA_INTEGRATION=true

# API Keys (Required)
GROQ_API_KEY=
OPENAI_API_KEY=
GEMINI_API_KEY=
YOUTUBE_API_KEY=

# Ollama (Optional - for local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL_PRIMARY=llama2

# Vector Store
VECTOR_STORE_BACKEND=chromadb
VECTOR_STORE_PATH=./knowledge_store
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Redis (Optional - for PRANA queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_USERNAME=

# EMS Integration (Optional)
EMS_API_BASE_URL=http://localhost:8000
EMS_AUTO_CREATE_STUDENTS=false

# MongoDB (Optional - for embedded Karma)
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=gurukul_karma
